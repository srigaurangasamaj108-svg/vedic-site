---
// 1. IMPORT THE STYLE ENGINE (Critical Fix)

import '../styles/global.css';

import SiteHeader from '../components/SiteHeader.astro';

const { title = "Vedic Library" } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <title>{title}</title>
  </head>
  
  <body class="min-h-screen flex flex-col">
    
   <SiteHeader />

    <main class="flex-grow">
      <slot />
    </main>

    <footer class="py-12 text-center text-xs font-sans text-ink-light opacity-50">
      <p>Dedicated to the preservation of generic Vedic wisdom.</p>
    </footer>

  </body>
</html>