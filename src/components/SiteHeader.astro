---
import MegaMenuCascading from './MegaMenuCascading.astro';
---

<header class="h-16 border-b border-border-subtle bg-parchment-light sticky top-0 z-50">
  <div class="max-w-[1600px] mx-auto px-6 h-full flex items-center justify-between gap-6">
    
    <a href="/vedic-site/" class="flex flex-col items-start min-w-max group mr-4">
      <span class="font-serif font-bold tracking-widest text-canon-red text-lg group-hover:opacity-80 transition">
        VEDIC LIBRARY
      </span>
    </a>

    <div class="relative group h-full flex items-center">
      <button class="flex items-center gap-2 text-ink font-sans text-xs font-bold uppercase tracking-widest hover:text-canon-red transition px-2 py-6">
        <span>Explore Library</span>
        <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 opacity-50 group-hover:rotate-180 transition-transform" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" />
        </svg>
      </button>

      <MegaMenuCascading />
    </div>

    <div class="flex-grow max-w-4xl relative hidden md:block mx-4">
      <div class="relative group">
        <input 
          type="text" 
          placeholder="Search verses, authors, synonyms..." 
          class="w-full bg-white border border-border-subtle rounded-full py-2.5 px-12 text-sm font-sans text-ink focus:outline-none focus:border-canon-red focus:ring-1 focus:ring-canon-red transition shadow-sm"
        />
        <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 absolute left-4 top-3 text-ink-light group-focus-within:text-canon-red transition" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z" />
        </svg>
      </div>
    </div>

    <div class="flex items-center gap-6 min-w-max ml-auto">
      <button class="hidden lg:flex items-center text-xs font-bold text-ink-light hover:text-canon-red uppercase tracking-widest transition">
        <span class="mr-1">EN</span>
        <svg xmlns="http://www.w3.org/2000/svg" class="h-3 w-3" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" />
        </svg>
      </button>

      <button class="text-ink-light hover:text-canon-red transition relative">
        <span class="sr-only">Account</span>
        <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
        </svg>
      </button>
    </div>

  </div>
</header>