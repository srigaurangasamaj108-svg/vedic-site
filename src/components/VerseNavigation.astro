---
const { prev, next } = Astro.props;
---

<nav class="verse-navigation">
  {prev && (
    <a href={prev.link} class="nav-button prev">
      ← {prev.label}
    </a>
  )}
  
  {next && (
    <a href={next.link} class="nav-button next">
      {next.label} →
    </a>
  )}
</nav>

<style>
  .verse-navigation {
    display: flex;
    justify-content: space-between;
    margin-top: 2rem;
    padding-top: 1rem;
    border-top: 1px solid #eee;
  }
  .nav-button {
    text-decoration: none;
    color: #0070f3;
    font-weight: bold;
  }
  .nav-button:hover {
    text-decoration: underline;
  }
</style>